<%- include('../partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-7">
        
        <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
            
            <div class="card-header p-4 text-white border-0" style="background: linear-gradient(45deg, #b45309, #d97706);">
                <div class="d-flex align-items-center">
                    <div class="bg-white bg-opacity-25 rounded-circle d-flex justify-content-center align-items-center me-3" style="width: 45px; height: 45px;">
                        <i class="bi bi-pencil-square fs-4"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 fw-bold">Edit Data Transaksi</h5>
                        <p class="mb-0 small text-white-50">Perbarui rincian pembayaran atau masa sewa.</p>
                    </div>
                </div>
            </div>

            <div class="card-body p-4 bg-white">
                <form action="/penyewaan/update/<%= data.id_sewa %>" method="POST">
                    
                    <div class="alert alert-light border d-flex align-items-center mb-4" role="alert">
                        <i class="bi bi-info-circle-fill text-warning fs-4 me-3"></i>
                        <div>
                            <div class="small text-muted text-uppercase fw-bold">Data Penyewa & Kamar</div>
                            <div class="text-dark fw-bold mb-0">
                                <%= data.nama_lengkap %> 
                                <span class="mx-2">â€¢</span> 
                                Unit <%= data.nomor_kamar %>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-secondary small text-uppercase">Tanggal Mulai</label>
                            <input type="date" class="form-control bg-light py-2" name="tgl_mulai" value="<%= data.tgl_mulai_fmt %>" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-secondary small text-uppercase">Tanggal Selesai</label>
                            <input type="date" class="form-control bg-light py-2" name="tgl_selesai" value="<%= data.tgl_selesai_fmt %>" required>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold text-secondary small text-uppercase">Total Bayar (Rp)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 fw-bold text-success">Rp</span>
                            <input type="number" class="form-control bg-light border-start-0 py-2" name="total" value="<%= data.total_bayar %>" required>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold text-secondary small text-uppercase">Status Pembayaran</label>
                        <select class="form-select bg-light py-2" name="status">
                            <option value="Lunas" <%= data.status_pembayaran === 'Lunas' ? 'selected' : '' %>>Lunas</option>
                            <option value="Hutang" <%= data.status_pembayaran === 'Hutang' ? 'selected' : '' %>>Belum Lunas (Hutang)</option>
                        </select>
                    </div>

                    <hr class="my-4 border-light">

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/penyewaan" class="btn btn-light rounded-pill px-4 py-2 fw-bold text-muted border">Batal</a>
                        <button type="submit" class="btn btn-warning text-white rounded-pill px-5 py-2 fw-bold shadow-sm" style="background: linear-gradient(to right, #b45309, #d97706); border: none;">
                            <i class="bi bi-save me-2"></i>Simpan Perubahan
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>