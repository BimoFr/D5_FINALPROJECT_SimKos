<%- include('../partials/header') %>

<div class="card border-0 shadow-sm overflow-hidden rounded-4">
    
    <div class="card-header py-3 px-4 text-white border-0 d-flex justify-content-between align-items-center" 
         style="background: linear-gradient(45deg, #d97706, #f59e0b);">
        
        <div class="d-flex align-items-center">
            <i class="bi bi-receipt-cutoff me-2 fs-5"></i>
            <h6 class="mb-0 fw-bold">Data Keuangan</h6>
        </div>

        <a href="/penyewaan/add" class="btn btn-sm btn-light text-warning fw-bold rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Transaksi Baru
        </a>
    </div>  

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary small text-uppercase">
                    <tr>
                        <th class="ps-4 py-3">Tanggal</th>
                        <th>Penyewa</th>
                        <th>Kamar</th>
                        <th>Total Bayar</th>
                        <th class="text-end pe-4">Status / Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(data.length > 0) { %>
                        <% data.forEach(row => { %>
                            <tr>
                                <td class="ps-4 text-muted fw-medium">
                                    <%= row.created_at ? new Date(row.created_at).toLocaleDateString('id-ID') : '-' %>
                                </td>
                                <td class="fw-bold text-dark"><%= row.nama_lengkap %></td>
                                <td><span class="badge bg-light text-dark border">Unit <%= row.nomor_kamar %></span></td>
                                <td class="fw-bold text-dark">Rp <%= Number(row.total_bayar).toLocaleString('id-ID') %></td>
                                <td class="text-end pe-4">
                                    <% if(row.status_pembayaran === 'Lunas') { %>
                                        <span class="badge badge-soft-success px-3 py-2 rounded-pill"><i class="bi bi-check-circle-fill me-1"></i> Lunas</span>
                                    <% } else { %>
                                        <div class="d-flex flex-column align-items-end gap-1">
                                            <span class="badge badge-soft-danger px-3 py-2 rounded-pill">Belum Lunas</span>
                                            <a href="/penyewaan/lunas/<%= row.id_sewa %>" class="btn btn-sm btn-outline-success py-0 rounded-pill mt-1" style="font-size: 0.75rem;" onclick="return confirm('Tandai Lunas?')">Lunasi Sekarang</a>
                                        </div>
                                    <% } %>
                                    <div class="mt-2">
                                        <a href="/penyewaan/edit/<%= row.id_sewa %>" class="text-decoration-none text-muted small hover-primary"><i class="bi bi-pencil-square"></i> Edit</a>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr><td colspan="5" class="text-center py-5 text-muted">Belum ada data transaksi.</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>