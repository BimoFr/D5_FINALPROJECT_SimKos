<%- include('../partials/header') %>

<div class="card border-0 shadow-sm overflow-hidden rounded-4">
    
    <div class="card-header py-3 px-4 text-white border-0 d-flex justify-content-between align-items-center" 
         style="background: linear-gradient(45deg, #4f46e5, #3b82f6);">
        
        <div class="d-flex align-items-center">
            <i class="bi bi-door-open-fill me-2 fs-5"></i>
            <h6 class="mb-0 fw-bold">Daftar Kamar Kost</h6>
        </div>

        <a href="/kamar/add" class="btn btn-sm btn-light text-primary fw-bold rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Tambah Kamar
        </a>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary small text-uppercase">
                    <tr>
                        <th class="py-3 ps-4">No. Kamar</th>
                        <th>Tipe</th>
                        <th>Harga</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(data.length > 0) { %>
                        <% data.forEach(row => { %>
                            <tr>
                                <td class="ps-4">
                                    <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25 rounded-pill">
                                        Unit <%= row.nomor_kamar %>
                                    </span>
                                </td>
                                <td class="fw-medium text-dark"><%= row.tipe_kamar %></td>
                                <td class="fw-bold text-dark">Rp <%= Number(row.harga_per_bulan).toLocaleString('id-ID') %></td>
                                <td>
                                    <% if(row.status_kamar === 'Kosong') { %>
                                        <span class="badge badge-soft-success rounded-pill px-3 py-2">
                                            <i class="bi bi-check-circle me-1"></i> Tersedia
                                        </span>
                                    <% } else { %>
                                        <span class="badge badge-soft-danger rounded-pill px-3 py-2">
                                            <i class="bi bi-person-fill me-1"></i> Terisi
                                        </span>
                                    <% } %>
                                </td>
                                <td class="text-end pe-4">
                                    <a href="/kamar/edit/<%= row.id_kamar %>" class="btn btn-sm btn-light text-primary border rounded-3 me-1"><i class="bi bi-pencil-square"></i></a>
                                    <a href="/kamar/delete/<%= row.id_kamar %>" class="btn btn-sm btn-light text-danger border rounded-3" onclick="confirmDelete(event, this.href)"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr><td colspan="5" class="text-center py-5 text-muted">Belum ada data kamar.</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>