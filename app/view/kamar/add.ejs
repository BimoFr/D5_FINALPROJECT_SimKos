<%- include('../partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        
        <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
            
            <div class="card-header p-4 text-white border-0" style="background: linear-gradient(45deg, #1e1b4b, #4f46e5);">
                <div class="d-flex align-items-center">
                    <div class="bg-white bg-opacity-25 rounded-circle d-flex justify-content-center align-items-center me-3" style="width: 45px; height: 45px;">
                        <i class="bi bi-door-open-fill fs-4"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 fw-bold">Tambah Kamar Baru</h5>
                        <p class="mb-0 small text-white-50">Silakan pilih tipe kamar yang tersedia.</p>
                    </div>
                </div>
            </div>

            <div class="card-body p-4 bg-white">
                <form action="/kamar/add" method="POST">
                    
                    <div class="mb-4">
                        <label for="nomor" class="form-label fw-bold text-secondary small text-uppercase">Nomor Kamar</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-hash"></i></span>
                            <input type="text" class="form-control bg-light border-start-0 py-2" id="nomor" name="nomor" placeholder="Contoh: 101, A1" required>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="tipe" class="form-label fw-bold text-secondary small text-uppercase">Tipe Kamar</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-stars"></i></span>
                            <select class="form-select bg-light border-start-0 py-2" id="tipe" name="tipe" required>
                                <option value="" selected disabled>-- Pilih Tipe --</option>
                                <option value="Standard (Kipas)">Standard (Kipas)</option>
                                <option value="Deluxe (AC)">Deluxe (AC)</option>
                                <option value="VIP Exclusive">VIP Exclusive</option>
                                <option value="Suite Room">Suite Room</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="harga" class="form-label fw-bold text-secondary small text-uppercase">Harga Per Bulan (Rp)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 fw-bold text-primary">Rp</span>
                            <input type="number" class="form-control bg-light border-start-0 py-2" id="harga" name="harga" placeholder="Contoh: 800000" min="0" required>
                        </div>
                    </div>

                    <hr class="my-4 border-light">

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/kamar" class="btn btn-light rounded-pill px-4 py-2 fw-bold text-muted border">
                            Batal
                        </a>
                        <button type="submit" class="btn btn-primary rounded-pill px-5 py-2 fw-bold shadow-sm" style="background: linear-gradient(to right, #4f46e5, #3b82f6); border: none;">
                            <i class="bi bi-save me-2"></i>Simpan Data
                        </button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>

<%- include('../partials/footer') %>