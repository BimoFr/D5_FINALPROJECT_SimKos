<%- include('../partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        
        <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
            
            <div class="card-header p-4 text-white border-0" style="background: linear-gradient(45deg, #059669, #10b981);">
                <div class="d-flex align-items-center">
                    <div class="bg-white bg-opacity-25 rounded-circle d-flex justify-content-center align-items-center me-3" style="width: 45px; height: 45px;">
                        <i class="bi bi-person-plus-fill fs-4"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 fw-bold">Registrasi Penyewa Baru</h5>
                        <p class="mb-0 small text-white-50">Lengkapi data diri calon penghuni kos.</p>
                    </div>
                </div>
            </div>

            <div class="card-body p-4 bg-white">
                <form action="/penyewa/add" method="POST">
                    
                    <div class="mb-4">
                        <label for="nama" class="form-label fw-bold text-secondary small text-uppercase">Nama Lengkap</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-person-fill"></i></span>
                            <input type="text" class="form-control bg-light border-start-0 py-2" id="nama" name="nama" placeholder="Contoh: Budi Santoso" required>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="nik" class="form-label fw-bold text-secondary small text-uppercase">NIK (KTP)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-card-heading"></i></span>
                            <input type="number" class="form-control bg-light border-start-0 py-2" id="nik" name="nik" placeholder="16 digit NIK" required>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="wa" class="form-label fw-bold text-secondary small text-uppercase">Nomor WhatsApp</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-success"><i class="bi bi-whatsapp"></i></span>
                            <input type="number" class="form-control bg-light border-start-0 py-2" id="wa" name="wa" placeholder="Contoh: 62812345678" required>
                        </div>
                        <div class="form-text small text-muted"><i class="bi bi-info-circle me-1"></i> Gunakan format 62 atau 08.</div>
                    </div>

                    <div class="mb-4">
                        <label for="alamat" class="form-label fw-bold text-secondary small text-uppercase">Alamat Asal</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-geo-alt-fill"></i></span>
                            <textarea class="form-control bg-light border-start-0 py-2" id="alamat" name="alamat" rows="2" placeholder="Alamat lengkap sesuai KTP..." required></textarea>
                        </div>
                    </div>

                    <hr class="my-4 border-light">

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/penyewa" class="btn btn-light rounded-pill px-4 py-2 fw-bold text-muted border">
                            Batal
                        </a>
                        <button type="submit" class="btn btn-success rounded-pill px-5 py-2 fw-bold shadow-sm" style="background: linear-gradient(to right, #059669, #10b981); border: none;">
                            <i class="bi bi-save me-2"></i>Simpan Data
                        </button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>

<%- include('../partials/footer') %>